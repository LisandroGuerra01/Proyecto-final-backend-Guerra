<button onclick="location.href='/profile'">
    Profile
</button>

<h2>
    Bienvenido
    {{email}}
</h2>

<section class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Cat√°logo de productos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Acciones</th>
                        <th scope="col">Cantidad</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>
                            <button>
                                <a href="/products/{{this._id}}">Ver producto</a>
                            </button>
                        </td>
                        <td>
                            <form action="/api/carts/{{this.cid}}/product/{{this._id}}" method="POST">
                                <input type="hidden" name="addProductToCart" value="{{this._id}}">
                                <input type="number" name="quantity" min="1" max="{{this.stock}}" value="1" required>
                                <button type="submit">Agregar al carrito</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>